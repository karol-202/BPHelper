<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.karol202.bphelper">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
            android:name=".BPHelperApplication"
		    android:allowBackup="true"
		    android:icon="@mipmap/ic_launcher_48dp"
            android:roundIcon="@mipmap/ic_launcher_48dp"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.Launcher"
            tools:ignore="GoogleAppIndexingWarning">

        <!-- Works for both Analytics and Crashlytics -->
        <meta-data android:name="firebase_analytics_collection_deactivated" android:value="@bool/firebase_analytics_enabled" />

        <activity
		        android:name=".ui.activity.MainActivity"
		        android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="pl.karol202.bphelper.framework.androidservice.RecordingAndroidService"
            android:exported="false"/>

    </application>

</manifest>
