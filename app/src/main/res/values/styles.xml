<resources>
    <style name="Base.AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selectableItemBackgroundBorderless">?android:attr/selectableItemBackground</item>
        <item name="bannerStyle">@style/Banner</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Banner">
        <item name="android:height">54dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/banner_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
